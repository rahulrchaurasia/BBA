<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.beldara.bba.register.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <android.support.v7.widget.CardView
        android:id="@+id/llPersonalInfo"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rlPersonalInfo"
            style="@style/HeaderLayout"
            android:layout_marginLeft="@dimen/view_spacing_small"
            android:layout_marginRight="@dimen/view_spacing_small"
            android:layout_marginTop="10dp"
            android:minHeight="36dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingLeft="@dimen/view_spacing_small"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="Personal Information"
                android:textAllCaps="true"
                android:textAppearance="@style/TextViewStyle.Medium"
                android:textColor="@android:color/white"
                android:textStyle="bold" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="First Name">

                    <EditText
                        android:id="@+id/etFirstName"
                        style="@style/Style.edittext"

                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Last Name">

                    <EditText
                        android:id="@+id/etLastName"
                        style="@style/Style.edittext"
                       />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Mobile">

                    <EditText
                        android:id="@+id/etMobile1"
                        style="@style/Style.edittext"

                        android:inputType="number"
                        android:maxLength="10" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Pan No">

                    <EditText
                        android:id="@+id/etPanNo"
                        style="@style/Style.edittext"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                        android:inputType="textCapCharacters"

                        android:maxLength="10" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Email">

                <EditText
                    android:id="@+id/etEmail"
                    style="@style/Style.edittext"

                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Password">

                    <EditText
                        android:id="@+id/etPassworde"
                        style="@style/Style.edittext"

                        android:inputType="number"
                        android:maxLength="50" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="City">


                    <EditText
                        android:id="@+id/etCity"
                        style="@style/Style.edittext"


                        android:maxLength="50" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


        </LinearLayout>





        <Button
            android:id="@+id/btnSubmit"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_spacing_small"
            android:layout_marginRight="@dimen/view_spacing_small"
            android:layout_marginTop="8dp"
            android:minHeight="36dp"
            android:text="SUBMIT"
            android:textStyle="normal"
            android:visibility="visible" />

    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
