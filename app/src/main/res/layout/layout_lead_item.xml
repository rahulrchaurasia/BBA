            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="50"-->
            <!--android:background="@color/red_descent"-->
            <!--android:text="Update"-->
            <!--android:textColor="@color/white" />-->




            <!--</LinearLayout>-->


        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>